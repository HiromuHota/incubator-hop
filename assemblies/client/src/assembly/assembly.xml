<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>client</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <!-- the staging dir -->
    <fileSet>
      <directory>${assembly.dir}</directory>
      <outputDirectory>.</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- hop components -->
    <dependencySet>
      <includes>
<!--        TODO: Reactivate when we have new samples-->
<!--        <include>org.hop:hop-assemblies-samples:zip</include>-->
        <include>org.hop:hop-assemblies-libs:zip</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>WEB-INF</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.hop:hop-assemblies-static:zip</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>.</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

  </dependencySets>
</assembly>
